{
  "manifest_version": 2,

  "name": "Koren's URL Shortener",
  "description": "This extension will shorten urls!",
  "version": "1.0",
  "icons": "./128.png",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "./128.png"
    }
  },

  "background": {
    "scripts": ["popup.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "http://*/",
    "storage",
    "tabs",
    "https://url-shortener-task.korenezri.repl.co/",
    "https://url-shortener-task.korenezri.repl.co/*"
  ]
}
