{
  "manifest_version": 2,

  "name": "Koren's URL Shortener",
  "description": "This extension will shorten urls!",
  "version": "1.0",

  "browser_action": {
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["popup.js"],
    "persistent": false
  },
  "permissions": ["activeTab", "http://*/", "storage"]
}
